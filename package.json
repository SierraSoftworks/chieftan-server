{
  "name": "chieftan",
  "version": "1.0.0",
  "description": "A deployment management tool",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "test": "mocha",
    "prebuild": "npm run clean",
    "build": "tsc",
    "start": "node dist/index",
    "build:watch": "tsc --watch",
    "test:watch": "mocha --watch",
    "prewatch": "npm run build",
    "watch": "concurrently --raw --kill-others \"npm run build:watch\" \"npm run test:watch\"",
    "create:admin": "node dist/tools/newAdmin",
    "create:token": "node dist/tools/newToken"
  },
  "repository": {
    "type": "git",
    "url": "git@git.emss.co.za:chieftan/server.git"
  },
  "author": "Benjamin Pannell <admin@sierrasoftworks.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.1",
    "handlebars": "^4.0.5",
    "iridium": "^7.0.0-alpha.15",
    "lodash": "^4.14.2",
    "restify": "^4.1.1",
    "typescript": "^2.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "*",
    "@types/handlebars": "*",
    "@types/mocha": "*",
    "@types/restify": "*",
    "@types/superagent": "*",
    "@types/supertest": "*",
    "@types/supertest-as-promised": "*",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "concurrently": "^2.1.0",
    "mocha": "^2.5.3",
    "rimraf": "^2.5.3",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.1.0"
  }
}
