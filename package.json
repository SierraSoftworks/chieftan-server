{
  "name": "chieftan",
  "version": "1.0.0",
  "description": "A deployment management tool",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -R dist/ || true",
    "test": "mocha",
    "build": "tsc",
    "start": "node dist/index",
    "build:watch": "tsc --watch",
    "test:watch": "mocha --watch",
    "prewatch": "npm run build",
    "watch": "concurrently --raw --kill-others \"npm run build:watch\" \"npm run test:watch\""
  },
  "repository": {
    "type": "git",
    "url": "git@git.emss.co.za:chief/server.git"
  },
  "author": "Benjamin Pannell <admin@sierrasoftworks.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.0",
    "handlebars": "^4.0.5",
    "iridium": "^7.0.0-alpha.9",
    "lodash": "^4.13.1",
    "restify": "^4.1.0",
    "typescript": "^1.8.10"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "concurrently": "^2.1.0",
    "mocha": "^2.5.3",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.1.0"
  }
}
